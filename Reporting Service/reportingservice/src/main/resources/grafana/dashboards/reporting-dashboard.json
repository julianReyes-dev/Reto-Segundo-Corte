{
  "title": "Reporting Service Dashboard",
  "panels": [
    {
      "title": "Kafka Consumer Metrics",
      "type": "graph",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "kafka_consumer_consumer_fetch_manager_metrics_records_lag_max",
          "legendFormat": "Max Records Lag"
        },
        {
          "expr": "kafka_consumer_consumer_fetch_manager_metrics_records_consumed_rate",
          "legendFormat": "Records Consumed Rate"
        }
      ]
    },
    {
      "title": "API Request Rate",
      "type": "graph",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_count[1m])",
          "legendFormat": "Request Rate"
        }
      ]
    },
    {
      "title": "JVM Memory Usage",
      "type": "graph",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "jvm_memory_used_bytes{area=\"heap\"}",
          "legendFormat": "Heap Used"
        },
        {
          "expr": "jvm_memory_max_bytes{area=\"heap\"}",
          "legendFormat": "Heap Max"
        }
      ]
    }
  ]
}